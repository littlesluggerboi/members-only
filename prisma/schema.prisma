generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  first_name String
  last_name  String
  password   String
  email      String
  status     Boolean
  admin      Boolean?
  messages   Message[]
}

model Message {
  id         Int      @id @default(autoincrement())
  author_id  Int
  user       User     @relation(fields: [author_id], references: [id])
  title      String
  text       String
  time_stamp DateTime @default(now())
}
